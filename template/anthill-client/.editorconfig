# http://editorconfig.org
root = true

# 空格替代Tab缩进在各种编辑工具下效果一致
[*]
max_line_length = 80
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.ts,*.tsx,*.js,*.cjs,*.mjs}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
